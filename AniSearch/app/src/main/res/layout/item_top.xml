<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:id="@+id/item_top_frame_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <ImageView
                        android:id="@+id/item_top_image_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_background"/>

                <ProgressBar
                        android:id="@+id/item_top_progress_bar_requesting_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </FrameLayout>

            <TextView
                    android:id="@+id/item_top_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title long title very long title overflow title"
                    android:maxLines="2"
                    android:minLines="2"
                    app:layout_constraintTop_toBottomOf="@+id/item_top_frame_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>