        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:id="@+id/i_search_result_fl_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_search_result_height"
                    app:layout_constraintTop_toTopOf="parent">

                <ImageView
                        android:id="@+id/item_search_result_image_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/fma"/>

                <ProgressBar
                        android:id="@+id/item_search_result_progress_bar_requesting_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </FrameLayout>

            <TextView
                    android:id="@+id/item_search_result_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Title long title very long title overflow title"
                    android:textColor="@color/colorTextDark"
                    android:maxLines="2"
                    android:minLines="2"
                    app:layout_constraintTop_toBottomOf="@+id/i_search_result_fl_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

