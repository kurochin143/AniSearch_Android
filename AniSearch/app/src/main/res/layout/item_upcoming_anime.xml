<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/item_upcoming_anime_frame_image"
            android:layout_width="64dp" android:layout_height="96dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/item_upcoming_anime_image_image"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>

        <ProgressBar
                android:id="@+id/item_upcoming_anime_progress_bar_requesting_image"
                android:layout_width="match_parent" android:layout_height="match_parent"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>