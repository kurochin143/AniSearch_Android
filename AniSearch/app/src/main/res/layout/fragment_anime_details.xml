<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.AnimeDetailsFragment"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <ImageView
                    android:id="@+id/f_anime_details_i_image"
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fma"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignTop="@id/f_anime_details_i_image"
                    android:layout_toEndOf="@id/f_anime_details_i_image"
                    android:layout_alignBottom="@id/f_anime_details_i_image">

                <TextView
                        android:id="@+id/f_anime_details_t_name_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="25sp"
                        android:maxLines="3"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>